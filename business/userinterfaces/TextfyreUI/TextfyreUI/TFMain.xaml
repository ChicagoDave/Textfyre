<Window x:Class="TextfyreUI.TFMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:tf="clr-namespace:TextfyreUI"
    xmlns:tfc="clr-namespace:TextfyreControls;assembly=TextfyreControls"
    Title="Textfyre" Height="568" Width="724">
    <Grid>
        <FlowDocumentReader Name="reader">
            <tfc:BookControl Name="book">
                <FlowDocument.Background>
                    <ImageBrush ImageSource="images/parchmentbase.jpg"/>
                </FlowDocument.Background>
            </tfc:BookControl>
        </FlowDocumentReader>
    </Grid>
</Window>
