<UserControl x:Class="Textfyre.UI.Controls.Hints.HintGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid  Width="280" x:Name="LayoutRoot">
        <StackPanel x:Name="MainPanel">
            <TextBlock x:Name="TxtTitle" Cursor="Hand" Margin="0,5,0,0" TextAlignment="Center" />
            <StackPanel x:Name="HintsPanel" Height="0"></StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
