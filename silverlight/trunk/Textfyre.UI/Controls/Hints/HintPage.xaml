<UserControl x:Class="Textfyre.UI.Controls.Hints.HintPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:Textfyre.UI.Controls"
    >
    <Grid  Width="280" x:Name="LayoutRoot">
        <StackPanel x:Name="MainPanel">
            <TextBlock x:Name="TxtTitle" Margin="0,0,0,5" TextAlignment="Center" />
            <StackPanel x:Name="HintsPanel"></StackPanel>
            <ctrl:TextButton x:Name="BtnClose" Text="Close" Width="100" Margin="0,20,0,0" HorizontalAlignment="Center" Click="BtnClose_Click" />
        </StackPanel>
    </Grid>
</UserControl>
