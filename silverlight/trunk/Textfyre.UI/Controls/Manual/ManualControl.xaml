<UserControl x:Class="Textfyre.UI.Controls.Manual.ManualControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:Textfyre.UI.Controls"
    >
    <Grid x:Name="LayoutRoot">
        <ctrl:Art ID="BookPage2" />
        <ScrollViewer x:Name="ManualScroller"  BorderThickness="0" Style="{StaticResource ScrollViewerStyle1}" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="ContentStack" Margin="0,20,0,20">
            <TextBlock x:Name="Title" />
            <StackPanel x:Name="Topics">
                                
            </StackPanel>
        </StackPanel>
        </ScrollViewer>

    </Grid>
</UserControl>
