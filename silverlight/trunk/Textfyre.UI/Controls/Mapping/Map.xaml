<UserControl x:Class="Textfyre.UI.Controls.Mapping.Map"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid x:Name="LayoutRoot" Width="320" Height="320" Background="#FFBDA892">
        <Canvas x:Name="_cvRoot">
            <ScrollViewer Width="320" Height="320" x:Name="_svContent" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" >
                <Canvas x:Name="_cvContent" Background="#FFEDD8C2" Width="2000" Height="2000">
                    <Image x:Name="MapImage" Width="2000" Height="2000" Stretch="Fill" />
                </Canvas>
            </ScrollViewer>
        </Canvas>
        <TextBlock x:Name="_txtDebug" Width="100" Height="32" Text="Debug" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="8,0,0,8" />
        <Button x:Name="BtnClose" Content="Close" Click="BtnClose_Click" Width="50" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,8,0" />
    </Grid>
</UserControl>
