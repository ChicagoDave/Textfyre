<UserControl x:Class="Textfyre.UI.Controls.SpeechBubble.Bubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid x:Name="LayoutRoot">
        <Rectangle Style="{StaticResource SpeechBubbleRect}" Height="71" HorizontalAlignment="Left" VerticalAlignment="Top" Width="147" RadiusX="16" RadiusY="16" x:Name="BubbleRect"/>
        <Path Style="{StaticResource SpeechBubble}" Height="26.917" HorizontalAlignment="Left" Margin="36,0,0,0" VerticalAlignment="Top" Width="27" Data="M101.92829,114.55978 L102.94842,141.81125 L128.36603,114.49429" StrokeStartLineCap="Flat" StrokeEndLineCap="Flat" x:Name="BubblePoint">
            <Path.RenderTransform>
                <ScaleTransform x:Name="PathScale" ScaleX="1" ScaleY="1" />
            </Path.RenderTransform>
        </Path>
        <TextBlock Grid.Column="0" Grid.Row="0" Width="135" HorizontalAlignment="Left" Margin="6,8,0,0" VerticalAlignment="Top"  TextWrapping="Wrap" x:Name="BubbleText"></TextBlock>
    </Grid>
</UserControl>
