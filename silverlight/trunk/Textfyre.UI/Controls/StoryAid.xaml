<UserControl x:Class="Textfyre.UI.Controls.StoryAid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrl="clr-namespace:Textfyre.UI.Controls"
             xmlns:hints="clr-namespace:Textfyre.UI.Controls.Hints"
             >
    <Grid x:Name="LayoutRoot" >
        <ctrl:Art x:Name="PageArt" Visibility="Visible" />
        <ctrl:Topic x:Name="TopicControl" Visibility="Collapsed" />
        <hints:HintPage x:Name="HintControl" Visibility="Collapsed" />
    </Grid>
</UserControl>
