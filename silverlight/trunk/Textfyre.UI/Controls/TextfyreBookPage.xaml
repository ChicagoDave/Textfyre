<UserControl x:Class="Textfyre.UI.Controls.TextfyreBookPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:ctrls="clr-namespace:Textfyre.UI.Controls"
    Width="353" Height="557">
    <Grid x:Name="LayoutRoot" Width="353" Height="557">
        <ctrls:Art x:Name="BookPage1" ID="BookPage1" />
        <ctrls:Art x:Name="BookPage2" ID="BookPage2" Visibility="Collapsed" />
        <TextBlock Margin="-10,10,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="" TextWrapping="Wrap" x:Name="LocationChannel" TextAlignment="Center" Height="57"/>
        <TextBlock Margin="-10,0,0,10" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Text="" TextWrapping="Wrap" x:Name="TimeChannel" TextAlignment="Center" RenderTransformOrigin="0.5,20" Height="18" />

        <ScrollViewer x:Name="PageScrollViewer" BorderThickness="0" VerticalScrollBarVisibility="Auto" Width="320" Height="450" Style="{StaticResource ScrollViewerStyle1}">
        </ScrollViewer>
        <ctrls:More x:Name="ctrlMore" Visibility="Collapsed" />
        <ctrls:FlipButton x:Name="ctrlFlipButton" />
    </Grid>
</UserControl>
