<UserControl x:Class="Textfyre.UI.Controls.UserSettings.FontPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid x:Name="LayoutRoot">
        <StackPanel>
            <TextBlock x:Name="TBFontTitle" />
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Font" />
                    <ComboBox x:Name="CBFontFamily" />
                </StackPanel>
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Size" />
                    <ComboBox x:Name="CBFontSize" />
                </StackPanel>
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Style" />
                    <ComboBox x:Name="CBFontStyle" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Color" />
                    <ComboBox x:Name="CBFontColor" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
