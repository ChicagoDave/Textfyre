<UserControl x:Class="Textfyre.UI.Controls.UserSettings.FontPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:ctrl="clr-namespace:Textfyre.UI.Controls.UserSettings"
    >
    <Grid x:Name="LayoutRoot">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,10,0">
                    <TextBlock x:Name="TBFontTitle" Text="Font" />
                    <ComboBox x:Name="CBFontFamily" Width="250" />
                </StackPanel>
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Size" />
                    <ComboBox x:Name="CBFontSize" Width="50" />
                </StackPanel>
                <StackPanel Margin="0,0,10,0">
                    <TextBlock Text="Style" Width="125" />
                    <ComboBox x:Name="CBFontStyle" />
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="Color" />
                    <ctrl:ColorPickerButton x:Name="BtnColor" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
